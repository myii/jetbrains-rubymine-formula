# -*- coding: utf-8 -*-
# vim: ft=jinja

{%- set tplroot = tpldir.split('/')[0] %}
{%- import_yaml tplroot ~ "/defaults.yaml" as default_settings %}
{%- import_yaml tplroot ~ "/osfamilymap.yaml" as osfamilymap %}

{%- set _config = salt['config.get'](tplroot, default={}) %}
{%- set defaults = salt['grains.filter_by'](
      default_settings,
      default=tplroot,
      merge=salt['grains.filter_by']( osfamilymap, grain='os_family',
        merge=salt['grains.filter_by']( _config, default='lookup'
        )
      )
    )
%}
{%- set rubymine = salt['grains.filter_by']( {'defaults': defaults}, default='defaults', merge=_config) %}

{%- set pcode = rubymine.product ~ rubymine.edition if rubymine.edition else rubymine.product %}
{%- set jdata = salt['cmd.run']('curl -s -L {0}{1}'.format(rubymine.pkg.archive.uri, pcode))|load_yaml %}
{%- do rubymine.update({ 'version': jdata[ pcode ][0]['version'] }) %}

{%- set dirname = 'rubymine-%s-%s'|format( rubymine.edition if rubymine.edition else '', rubymine.version) %}
{%- set url = jdata[ pcode ][0]['downloads'][ rubymine.flavour ]['link'] %}
{%- set hash  = salt['cmd.run']('curl -L -s {0}'.format( jdata[ pcode ][0]['downloads'][ rubymine.flavour ]['checksumLink'])).split(' ')[0] %}  # noqa 204

{%- if rubymine.pkg.use_upstream_archive %}
       {%- do rubymine.pkg.archive.update({'name': rubymine.dir.archive ~ '/' ~ dirname,
                                           'path': rubymine.dir.archive ~ '/' ~ dirname,
                                           'source': url,
                                           'source_hash': hash }) %}
{%- endif %}

{%- if rubymine.pkg.use_upstream_macapp %}
       {%- do rubymine.pkg.macapp.update({
              'name': '/Applications', 'path': '/Applications', 'source': url, 'source_hash': hash }) %}
{%- endif %}
